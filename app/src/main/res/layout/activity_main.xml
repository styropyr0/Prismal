<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="40dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <com.matrix.prismal.PrismalIconButton
                    android:id="@+id/prev"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginVertical="10dp"
                    app:pib_animDuration="200"
                    app:pib_blurRadius="2.5"
                    app:pib_iconPadding="15dp"
                    app:pib_iconSrc="@drawable/ic_prev"
                    app:pib_iconTint="#FFFFFF"
                    app:pib_ior="1.8"
                    app:pib_pressScale="0.85" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <com.matrix.prismal.PrismalIconButton
                    android:id="@+id/next"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginVertical="10dp"
                    app:pib_animDuration="200"
                    app:pib_blurRadius="2.5"
                    app:pib_iconPadding="15dp"
                    app:pib_iconSrc="@drawable/ic_next"
                    app:pib_iconTint="#FFFFFF"
                    app:pib_ior="1.8"
                    app:pib_pressScale="0.85" />

            </LinearLayout>

            <com.matrix.prismal.PrismalSwitch
                android:id="@+id/prismalSwitch"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                app:psw_thumbBlurRadius="0"
                app:psw_thumbBrightness="1.3"
                app:psw_thumbChromaticAberration="22"
                app:psw_thumbCornerRadius="30dp"
                app:psw_thumbDisplacementScale="5"
                app:psw_thumbIOR="1.8"
                app:psw_thumbNormalStrength="12"
                app:psw_thumbThickness="3dp" />

            <com.matrix.prismal.PrismalIconButton
                android:id="@+id/prismalIconButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginVertical="10dp"
                app:pib_animDuration="200"
                app:pib_blurRadius="2.5"
                app:pib_iconPadding="15dp"
                app:pib_iconSrc="@drawable/icon"
                app:pib_iconTint="#FFFFFF"
                app:pib_ior="1.8"
                app:pib_pressScale="0.85" />

            <com.matrix.prismal.PrismalSlider
                android:id="@+id/prismalSlider"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                app:psl_thumbBlurRadius="0"
                app:psl_thumbBrightness="1.3"
                app:psl_thumbChromaticAberration="10"
                app:psl_thumbCornerRadius="30dp"
                app:psl_thumbDisplacementScale="8"
                app:psl_thumbIOR="1.5"
                app:psl_thumbNormalStrength="12"
                app:psl_thumbThickness="3dp" />

            <com.matrix.prismal.PrismalFrameLayout
                android:id="@+id/prismalFrame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="100dp"
                app:pfl_blurRadius="2"
                app:pfl_brightness="1.2"
                app:pfl_chromaticAberration="5"
                app:pfl_cornerRadius="70dp"
                app:pfl_displacementScale="20"
                app:pfl_glassThickness="2dp"
                app:pfl_normalStrength="40">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:fontFamily="@font/dm_sans_medium"
                    android:text="Press the buttons to change the background"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </com.matrix.prismal.PrismalFrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <com.matrix.prismal.PrismalIconButton
                    android:id="@+id/prismalIconButton2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginVertical="10dp"
                    app:pib_animDuration="200"
                    app:pib_blurRadius="2.5"
                    app:pib_iconPadding="15dp"
                    app:pib_iconSrc="@drawable/icon"
                    app:pib_iconTint="#FFFFFF"
                    app:pib_ior="1.8"
                    app:pib_pressScale="0.85" />

                <com.matrix.prismal.PrismalFrameLayout
                    android:id="@+id/prismalFrame2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_weight="1"
                    app:pfl_blurRadius="5"
                    app:pfl_brightness="1.3"
                    app:pfl_chromaticAberration="5"
                    app:pfl_cornerRadius="70dp"
                    app:pfl_displacementScale="20"
                    app:pfl_glassThickness="1dp"
                    app:pfl_normalStrength="40"
                    app:pfl_shadowSoftness="0.4">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="20dp"
                        android:fontFamily="@font/dm_sans_medium"
                        android:text="Another, Prismal Layout"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </com.matrix.prismal.PrismalFrameLayout>

                <com.matrix.prismal.PrismalIconButton
                    android:id="@+id/prismalIconButton3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginVertical="10dp"
                    app:pib_animDuration="200"
                    app:pib_blurRadius="2.5"
                    app:pib_iconPadding="15dp"
                    app:pib_iconSrc="@drawable/icon"
                    app:pib_iconTint="#FFFFFF"
                    app:pib_ior="1.8"
                    app:pib_pressScale="0.85" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>
