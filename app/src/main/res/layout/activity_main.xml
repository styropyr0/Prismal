<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:background="@drawable/bg2"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/i_see"
                android:textColor="@color/white"
                android:textSize="16sp" />


            <com.matrix.prismal.PrismalSwitch
                android:id="@+id/liquidSlider"
                android:layout_width="100dp"
                android:layout_height="40dp"
                app:thumbChromaticAberration="20"
                android:layout_gravity="center"
                android:layout_marginTop="20dp" />

            <com.matrix.prismal.PrismalIconButton
                android:id="@+id/prismalButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:iconSrc="@drawable/icon"
                app:iconPadding="12dp"
                app:pressScale="0.85"
                android:layout_marginVertical="10dp"
                android:layout_gravity="center"
                app:blurRadius="2.5"
                app:ior="1.8"
                app:animDuration="200" />

            <com.matrix.prismal.PrismalSlider
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                app:thumbShadowAlpha="80"
                app:thumbShadowSoftness="0.2" />


        </LinearLayout>
    </ScrollView>
</FrameLayout>
